<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>T-Fusion</title>
    <link rel="icon" type="image/png" href="images/logo.png" />
    <link rel="stylesheet" type="text/css" href="css/regi.css" />
    <link rel="stylesheet" href="https://unpkg.com/aos@next/dist/aos.css" />
    <script
      src="https://kit.fontawesome.com/089a52b9b0.js"
      crossorigin="anonymous"
    ></script>
  </head>
  <body>
    <!-- NAV BAR START -->
    <div class="nav-div" data-aos="fade-down" data-aos-duration="1000">
      <nav class="navbar">
        <div class="logo-div">
          <a href="#" class="logo-link"
            ><img class="logo" src="images/T-logo.png" alt="T-Fusion Logo"
          /></a>
        </div>
        <ul class="nav-content">
          <li><a href="/" class="nav-link">Home</a></li>
          <li><a href="/about" class="nav-link">About</a></li>
          <li><a href="/register" class="nav-link">Register</a></li>
        </ul>
      </nav>
    </div>
    <!-- NAV BAR END -->

    <section class="regi-section">
      <div
        class="regi-info-div"
        data-aos="fade-right"
        data-aos-duration="1500"
        data-aos-delay="300"
      >
        <h1 class="regi-head">Login:</h1>
        <div class="para-wrap">
          <p class="regi-info">
            Welcome to T-Fusion!<br />
            Please Login using your credentials to access the application!
          </p>
        </div>
        <img
          src="images/regi.jpg"
          alt="Registration Graphic"
          class="regi-img"
        />
      </div>
      <div
        class="regi-form-div"
        data-aos="fade-left"
        data-aos-duration="1500"
        data-aos-delay="300"
      >
        <form action="/login" method="POST" class="regi-form">
          <label for="email" class="email">E-Mail</label>
          <input
            id="f-input"
            type="email"
            class="email-input"
            name="email"
            placeholder="Enter Your E-Mail"
            required
          />

          <label for="password" class="pwd">Password</label>
          <input
            id="f-input"
            type="password"
            class="pwd-input"
            name="password"
            placeholder="Enter Your Password"
            required
          />

          <div class="btn-wrap">
            <button class="submit-btn" type="submit">Login</button><br />
            <a href="/register" class="login-link"
              >Not Registered? Click here to register!</a
            >
          </div>
        </form>
      </div>
    </section>

    <!-- FOOTER AND SCRIPTS SECTION -->
    <footer data-aos="fade" data-aos-duration="1000">
      <p class="foot">Â© by T-Fusion. All rights reserved.</p>
    </footer>
    <script src="https://unpkg.com/aos@next/dist/aos.js"></script>
    <script>
      AOS.init({
        offset: 70,
        once: true,
      });
    </script>
  </body>
</html>
